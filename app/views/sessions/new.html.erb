<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        会员登录
      </div>
      <div class="panel-body map_theme">
        <div class="form-signin" role="form">
          <%= form_for :session, url: sessions_path, :class => 'form-inline', :role => 'form' do |f| %>
              <div class="form-group">
                <%= f.label :'登录邮箱' %>
                <br>
                <%= f.text_field :email, :class => 'form-control', :placeholder => '登录邮箱' %>
              </div>
              <div class="form-group">
                <%= f.label :'密码' %>
                <br>
                <%= f.password_field :password, :class => 'form-control', :placeholder => '密码' %>
              </div>
              <div class="form-group">
                <label>
                  <input type="checkbox" id="check" name="check"> 记住密码
                </label>
              </div>
              <div class="form-group">
                <%= f.submit "登录", :class => 'btn btn-primary' %>
              </div>
          <% end %>
        </div>
      </div>
      <!--panel-body-->
    </div>
    <!--panel-->
  </div>
  <!--col-->
</div>
<!--row-->
